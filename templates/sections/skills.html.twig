<div class="row" id="skills">
    <div class="col-12 d-flex flex-column justify-content-center">

        <div class="row justify-content-center">
            <div class="col">
                <div class="title rounded-circle d-flex flex-column justify-content-center">
                    <p class="p-1"><i class="fas fa-code fa-3x"></i></p>
                    <h3 class="p-1">{{ 'Comp√©tences' | trans}}</h3>
                </div>
            </div>
        </div>

        <div class="row mt-3 justify-content-center">
            <div class="col-lg-8 col-12 d-flex justify-content-center">
                <ul class="list-group list-group-flush w-100">
                    {% for skill in skills %}
                        <li class="list-group-item">{{skill.description}}
                        {% set value = skill.pourcentage ~ '%' %}
                        {% set style = 'style = "width:' ~ value ~ ';"' %}
                            
                        
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar"  {{ style | raw}}
                                aria-valuenow="{{skill.pourcentage}}" aria-valuemin="0" aria-valuemax="100">{{value}}</div>
                        </div>
                    </li>
                    {% endfor %}
                          
                </ul>
            </div>
        </div>
    </div>
</div>